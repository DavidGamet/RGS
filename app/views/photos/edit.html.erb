<div class="wrapper">
  <div class="container">
  <h2 id=title>télécharger une photo</h2>
    <div class="row">
      <div class="col-sm-3">

        <div class="form-group">
          <%= simple_form_for @photo_path do |f|%>
            <%= f.input :name, :placeholder => "John Robert" %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.input :prix, :placeholder => "45 €" %>
            <%= f.input :description, :placeholder => "very nice guy who likes to clean your theeths" %>
            <%= f.input :photo, :placeholder => "download a photo" %>

             <div class="submit">
            <%= f.submit "Create", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>



    </div>
  </div>
</div>
</div>
